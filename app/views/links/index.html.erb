<%= flash_messages %>

<div class="container" id="user-name">
  <div class="col-md-offset-3 col-md-6">
    <div class="row well">
      <h1> Welcome <%= current_user.email %></h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-md-offset-3 col-md-6">
    <div class="row well">
      <%= link_to "Logout", logout_path, method: :delete %>
    </div>
  </div>
</div>

<div class="container">
    <div class="col-md-offset-3 col-md-6">
      <div class="row well">
        <h2 align='center'>Submit a New Link</h2>
        <%= render partial: 'form' %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row well">
    <div class="col-md-12">
      <div class="input-group" id="search-bar">
        <input type="text" class="form-control" id='filter' placeholder="Search for a Link">
        <span class="input-group-btn">
        <button class="btn btn-default" type="button">Search</button>
        </span>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <h2 align='center'>Your Links</h2>
</div>

<div class="col-md-offset-3 col-md-6">
  <div class="row well">
    <% @links.each do |link| %>
    <div class='all-links'>
      <strong>Title: <%= link.title %></strong><br>
      <div class='stuff'>
        <strong>Link: <%= link.link %></strong>
         <input class="btn btn-default read" id="read" type="button" name="submit" value="Mark as Read"><input class="btn btn-default unread" type="button" name="submit" value="Mark as Unread"><%= link_to "Edit", edit_link_path(link) %><br><br>
       </div>
      </div>
     <br>
    <% end %>
  </div>
</div>
