<%= flash_messages %>

<div class="container" id="user-name">
  <div class="col-md-offset-3 col-md-6">
    <div class="row well">
      <h1> Welcome <%= current_user.email %></h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-md-offset-3 col-md-6">
    <div class="row well">
      <%= link_to "Logout", logout_path, method: :delete %>
    </div>
  </div>
</div>

<div class="container">
    <div class="col-md-offset-3 col-md-6">
      <div class="row well">
        <h2 align='center'>Submit a New Link</h2>
        <%= render partial: 'form' %>
    </div>
  </div>
</div>

<div class="container">
    <div class="col-md-offset-3 col-md-6">
      <div class="row well">
        <h2 align='center'>Your Links</h2>
        <% @links.each do |link| %>
        <li><strong>Title: </strong> <%= link.title %></li>
          <li><strong>Link:</strong> <%= link.link %></li><br>
        <% end %>
    </div>
  </div>
</div>