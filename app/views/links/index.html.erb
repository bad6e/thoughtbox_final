<%= flash_messages %>

<div class="container" id="user-name">
  <div class="col-md-offset-3 col-md-6">
    <div class="row well">
      <h1> Welcome <%= current_user.email %></h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-md-offset-3 col-md-6">
    <div class="row well">
      <%= link_to "Logout", logout_path, method: :delete %>
    </div>
  </div>
</div>

<div class="container">
    <div class="col-md-offset-3 col-md-6">
      <div class="row well">
        <h2 align='center'>Submit a New Link</h2>
        <%= render partial: 'form' %>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-md-offset-3 col-md-6">
    <div class="row well">
      <div class="input-group" id="search-bar">
        <input type="text" class="form-control" id='filter' placeholder="Search for a Link">
        <span class="input-group-btn">
        <button class="btn btn-default" type="button">Search</button>
        </span>
      </div>
    </div>
  </div>
</div>

<div class="container">
    <div class="col-md-offset-3 col-md-6">
      <div class="row well">
      <input class="btn btn-default showread" id="showread" type="button" name="submit" value="Show Read Links">
      <input class="btn btn-default showunread" type="button" name="submit" value="Show Unread Links">
      <input class="btn btn-default alpha" type="button" name="submit" value="Sort Alphabetically">
    </div>
  </div>
</div>

<div class="container">
  <h2 align='center'>Your Links</h2>
</div>

<div class="col-md-offset-3 col-md-6">
  <div class="row well">
    <div id='link-list'></div>
  </div>
</div>

