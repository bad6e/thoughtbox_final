<%= flash_messages %>

<div class="container" id="user-name">
  <div class="col-md-offset-3 col-md-6">
    <div class="row well">
      <h1> Welcome <%= current_user.email %></h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="col-md-offset-3 col-md-6">
    <div class="row well">
      <%= link_to "Logout", logout_path, method: :delete %>
    </div>
  </div>
</div>

<div class="container">
    <div class="col-md-offset-3 col-md-6">
      <div class="row well">
        <h2 align='center'>Submit a New Link</h2>
        <%= render partial: 'form' %>
    </div>
  </div>
</div>

<div class='list_product'>
    <div class='row'>
        <div class='delete'>x</div>
        <div class='title'>Standing Fan 3</div>
     </div>

<div class="container">
  <h2 align='center'>Your Links</h2>
</div>

<div class="col-md-offset-3 col-md-6">
  <div class="row well">
    <% @links.each do |link| %>
      <strong>Title: <%= link.title %></strong><br>
      <div class='stuff'>
        <strong>Link: <%= link.link %></strong>
         <input class="btn btn-default read" id="read" type="button" name="submit" value="Mark as Read"><input class="btn btn-default unread" type="button" name="submit" value="Mark as Unread"><br><br>
      </div>
     <br>
    <% end %>
  </div>
</div>
